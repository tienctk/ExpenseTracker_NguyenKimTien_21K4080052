@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Identity/Pages/Shared/_AuthLayout.cshtml";
}

<div class="login-container-wrapper">
    <div class="login-container">
        <div class="login-card">
            <div class="avatar">
                @*<img src="~/images/avatar.png" alt="Avatar">*@
            </div>
            <h2>Login Account</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="Input.Email" class="form-control" placeholder="Username" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group remember-me">
                    <input asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe"> Remember me</label>
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
            <div class="footer">
                <p>Not a member? <a href="/Identity/Account/Register">Create an account</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
